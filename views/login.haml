
%html{ :style => "background: #3b679e" }


%h1{ :style => "color: #fff"} Login
%form{:action => "/login", :method => "post"}
  .field
    .label
      %label{:style => "color: #fff", :for => "user_email'"} Email
    %input{:id => "user_email", :name => "email", :size => 30, :type => "text"}
